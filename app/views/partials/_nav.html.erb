 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <nav class="navbar d-flex justify-content-between">
      <li class="nav-item" style="list-style-type: none;">
          <%= link_to image_tag("logoheader3x.png", class:"nav-link logo-header"), root_path %>
      </li>

      <li class="nav-item" style="list-style-type: none;">
          <%= text_field_tag(:search, params[:search], placeholder: "Search", :class =>"searchbar") %>
          <%= image_submit_tag("icon-sarch@3x.png", class: "btn search-icon") %>
      </li>

      <% if user_signed_in? %>
          <li class="nav-item" style="list-style-type: none;">
            <div class= "btn btn-primary-my-cart"
              <%= link_to "My Cart", new_user_registration_path %>
              <p class="number"><%= current_user.cart.calculate_quantity %></p>
            </div>
            <div class="nav-item subnav" style="list-style-type: none;">
                <div class="account">
                  <p><%= link_to image_tag("group-3@3x.png", class:"icon-menu") %>
                  <p>My account</p>
                </div>
                <ul class="subnav-content nav">
                  <li class="element-menu element-menu-line"><%= link_to "My orders", destroy_user_session_path, method: :delete %></li>
                  <li class="element-menu"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>
            </ul>
          </div>
      <% else %>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to "Login", new_user_session_path, class:"btn btn-primary-login" %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <%= link_to "Sign up", new_user_registration_path, class:"btn btn-primary-sign-up" %>
          </li>
          <li class="nav-item" style="list-style-type: none;">
            <div class= "btn btn-primary-my-cart"
              <%= link_to "My Cart", new_user_registration_path %>
              <p class="number">0</p>
            </div>
        <%end%>

    </nav>
    <div class="topnav">
      <div class="container-logo-hamburger">
        <%= link_to image_tag("logo-loopcommerce@3x.png", class:"active-hamburger") %>
      </div>
      <div class="searchbar-hamburger" style="list-style-type: none;">
        <%= text_field_tag(:search, params[:search], placeholder: "Search", :class =>"searchbar") %>
        <%= image_submit_tag("icon-sarch@3x.png", class: "btn search-icon") %>
    </div>
      <% if user_signed_in? %>
        <div class="hr-hamburger" id="myLinks">
          <a><%= link_to "My orders", destroy_user_session_path, method: :delete, class:"hamburger-menu" %></a>
          <a><%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"hamburger-menu" %></a>
        </div>
      <% else %>
        <div class="hr-hamburger" id="myLinks">
          <a><%= link_to "Login", new_user_session_path, class:"hamburger-menu" %></a>
          <a><%= link_to "Sign up", new_user_registration_path, class:"hamburger-menu" %></a>
          <a><%= link_to "My cart", destroy_user_session_path, method: :delete, class:"hamburger-menu" %></a>
        </div>
      <%end%>
      <div class="icon-hamburger">
         <a href="javascript:void(0);" class="icon" id="icon-menu">
          <i class="fa fa-bars"></i>
        </a>
      </div>      
  </div>
  <%= javascript_pack_tag 'hamburger' %>
