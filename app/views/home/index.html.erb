<div class="banner">
    <%= image_tag("banner-2@3x.png", :class => "banner-2") %>    
</div>
<div class="card-reasonable-prices">
    <div class="money-icon-container">
        <%= image_tag("money-icon.png", :class => "money-icon") %>    
    </div>
    <p class="reasonable-prices-title">Reasonable Prices</p>
    <p class="reasonable-prices-text">Have you ever finally just gave in to the temptation and read your horoscope.</p>
</div>
<div class="card-customer-support">
    <div class="call-icon-container">
        <%= image_tag("call-icon.png", :class => "call-icon") %>    
    </div>
    <p class="reasonable-prices-title">Customer Support</p>
    <p class="reasonable-prices-text">Have you ever finally just gave in to the temptation and read your horoscope.</p>
</div>
<div class="card-express-delivery">
    <div class="delivery-icon-container">
        <%= image_tag("delivery-icon.png", :class => "delivery-icon") %>    
    </div>
    <p class="reasonable-prices-title">Express Delivery</p>
    <p class="reasonable-prices-text">Have you ever finally just gave in to the temptation and read your horoscope.</p>
</div>
<p class="text-arrivals">New Arrivals</p>
<div class="container-products">
    <% Product.all.each do |product| %>
            <div class="products-home">
                <%= image_tag (rails_blob_url(product.image)), :class => "img-products" %>
                <div class="line-product"></div>
                <p class="title-products font-styles-products"><%= label_tag (product.name)%></p>
                <p class="price-products">$<%= label_tag (product.price)%></p>
                <%= link_to "ADD TO CART", new_user_session_path, class:"btn btn-primary-login add-to-cart-button" %>
            </div>
    <%end%>
 </div>

<%= render "partials/footer" %>
<%=yield %>
